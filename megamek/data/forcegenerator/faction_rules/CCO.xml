<?xml version="1.0" encoding="utf-8"?>

<!--Like Ghost Bear and Star Adder, Clan Coyote favors heavy and assault
Meks. They have a third Keshik to serve as the Loremaster's honor guard.
FL galaxies have one reserve cluster which is structured like FL clusters.
SL galaxies are a mix of SL and solahma clusters, with conventional armor
and infantry found in some solahma units.

Because some SL units (the reserves) are structured like FL and others are
structured like the solahma units (but without conventional armor/infantry)
I have chosen to use the SL rating for reserve units and PG rating for lower-
ranked SL units.-->

<ruleset faction="CCO" ratingSystem="CLAN" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="formationRulesetSchema.xsd">

	<defaults>
		<eschelon>%CLUSTER%</eschelon>
		<rankSystem>%RANK_CLAN%</rankSystem>
		<rating>FL</rating>
	</defaults>

	<toc>
		<unitType>
			<option ifDateBetween="3062,">null,Mek,ProtoMek,Tank,VTOL,Infantry,BattleArmor,AeroSpaceFighter,Conventional Fighter,Warship,Dropship,Jumpship</option>
			<option ifDateBetween="2870,3061">null,Mek,Tank,VTOL,Infantry,BattleArmor,AeroSpaceFighter,Conventional Fighter,Warship,Dropship,Jumpship</option>
			<option ifDateBetween=",2869">null,Mek,Tank,VTOL,Infantry,AeroSpaceFighter,Conventional Fighter,Warship,Dropship,Jumpship</option>
		</unitType>

		<eschelon>
			<option ifUnitType="">%TOUMAN%,%GALAXY%,%CLUSTER%</option>
			<option ifUnitType="Warship">%CLUSTER%</option>
			<option ifUnitType="Dropship|Jumpship">%STAR%</option>
			<option ifUnitType="Mek" ifDateBetween="2870,">%TRINARY%^,%TRINARY%,%BINARY%^,%BINARY%,%STAR%^,%STAR%</option>
			<option>%TRINARY%,%BINARY%,%STAR%</option>
		</eschelon>

		<rating>
			<option ifUnitType="Tank|VTOL">PG:Second Line,Sol:Solahma</option>
			<option ifUnitType="Infantry" ifDateBetween="2900,">PG:Second Line,Sol:Solahma</option>
			<option ifUnitType="Infantry">PG:Second Line,Sol:Solahma</option>
			<option ifEschelon="%TOUMAN%"></option>
			<option ifEschelon="%GALAXY%">FL:Front Line,SL:Second Line</option>
			<option>Keshik,FL:Front Line,SL:Reserve,PG:Second Line,Sol:Solahma</option>
		</rating>

		<flags>
			<option ifRating="Sol">sl:Reserve Cluster</option>
		</flags>
	</toc>

	<force eschelon="%TOUMAN%" eschName="Touman">
		<co>%KHAN%</co>

		<subforces>
			<subforce name="Golden Keshik" rating="Keshik"
				role="command" ifDateBetween=",3056">%CLUSTER%</subforce>
			<subforce name="Silver Keshik" rating="Keshik"
				ifDateBetween=",3056">%CLUSTER%</subforce>
			<subforce name="Bronze Keshik" rating="Keshik"
				ifDateBetween=",3056">%CLUSTER%</subforce>
			<subforce name="Alpha Galaxy" rating="FL"
				ifDateBetween=",3056">%GALAXY%</subforce>
			<subforce name="Alpha Galaxy" rating="FL"
				role="command" ifDateBetween="3057,3074">%GALAXY%</subforce>
			<subforce name="Beta Galaxy" rating="FL"
				ifDateBetween=",3054">%GALAXY%</subforce>
			<subforce name="Gamma Galaxy" rating="FL"
				ifDateBetween=",3056">%GALAXY%</subforce>
			<subforce name="Delta Galaxy" rating="FL"
				ifDateBetween=",3074">%GALAXY%</subforce>
			<subforce name="Epsilon Galaxy" rating="FL"
				ifDateBetween=",3074">%GALAXY%</subforce>
			<subforce name="Zeta Galaxy" rating="FL"
				ifDateBetween="3032,">%GALAXY%</subforce>
			<subforce name="Lambda Galaxy" rating="SL"
				ifDateBetween=",3074">%GALAXY%</subforce>
			<subforce name="Nu Galaxy" rating="SL"
				ifDateBetween="2880,">%GALAXY%</subforce>
			<subforce name="Xi Galaxy" rating="SL"
				ifDateBetween="2880,3056">%GALAXY%</subforce>
			<subforce name="Rho Galaxy" rating="SL"
				ifDateBetween="2880,3074">%GALAXY%</subforce>
			<subforce name="Sigma Galaxy" rating="SL"
				ifDateBetween="2895,3031">%GALAXY%</subforce>
			<subforce name="Omicron Galaxy" rating="SL"
				ifDateBetween="2900,3075">%GALAXY%</subforce>
		</subforces>

		<attachedForces>
			<subforce unitType="Warship">%CLUSTER%</subforce>
		</attachedForces>
	</force>

	<force eschelon="%CLUSTER%" eschName="Fleet" ifUnitType="Warship">
		<name>Naval Reserve</name>
		<co>%GALAXY_CMDR%</co>

		<subforces>
			<subforce chassis="Nightlord Battleship"
				ifDateBetween="2932,3074" role="command"
				fluffName="CCS Great Coyote Spirit">%ELEMENT%</subforce>
			<subforce chassis="Texas Battleship"
				ifDateBetween=",3074"
				fluffName="CCS Ancestral Home">%ELEMENT%</subforce>
			<subforce chassis="Cameron Battlecruiser"
				ifDateBetween=",3075"
				fluffName="CCS Blood of the Coyote">%ELEMENT%</subforce>
			<subforce chassis="Sovetskii Soyuz Heavy Cruiser"
				ifDateBetween=",3072"
				fluffName="CCS Howling">%ELEMENT%</subforce>
			<subforce chassis="Sovetskii Soyuz Heavy Cruiser"
				ifDateBetween=",3075"
				fluffName="CCS Steel Fang">%ELEMENT%</subforce>
			<subforce chassis="Avatar Heavy Cruiser"
				ifDateBetween=",3023"
				fluffName="CCS Spirit in the Sky">%ELEMENT%</subforce>
			<subforce chassis="Liberator Cruiser"
				ifDateBetween="3024,"
				fluffName="CCS Spirit in the Sky">%ELEMENT%</subforce>
			<subforce chassis="Lola III Destroyer"
				ifDateBetween=",3073"
				fluffName="CCS Honor of Ages">%ELEMENT%</subforce>
			<subforce chassis="Lola III Destroyer"
				ifDateBetween=",3073"
				fluffName="CCS Courage">%ELEMENT%</subforce>
			<subforce chassis="Essex II Destroyer"
				ifDateBetween=",3075"
				fluffName="CCS Windrunner">%ELEMENT%</subforce>
			<subforce chassis="Potemkin Troop Cruiser"
				ifDateBetween=",3084"
				fluffName="CCS Midnight Star">%ELEMENT%</subforce>
			<subforce chassis="Potemkin Troop Cruiser"
				ifDateBetween=",3075"
				fluffName="CCS Morning Star">%ELEMENT%</subforce>
			<subforce chassis="Carrack Transport"
				ifDateBetween="2950,"
				fluffName="CCS Solar Blaze">%ELEMENT%</subforce>
			<subforce chassis="Vincent Corvette"
				ifDateBetween="3071"
				fluffName="CCS Relentless Pursuit">%ELEMENT%</subforce>
			<subforce chassis="Volga Transport"
				ifDateBetween="3071,3075"
				fluffName="CCS Provider">%ELEMENT%</subforce>
		</subforces>
	</force>

	<force eschelon="%GALAXY%" eschName="Galaxy">
		<name>{greek} Galaxy</name>
		<co>%GALAXY_CMDR%</co>

		<subforces ifRole="command">
			<subforce name="Golden Keshik" role="command"
				rating="Keshik">%CLUSTER%</subforce>
			<subforce name="Silver Keshik" ifDateBetween="3056,3062"
				rating="Keshik">%CLUSTER%</subforce>
			<subforce name="Bronze Keshik"
				rating="Keshik">%CLUSTER%</subforce>
			<subforce>%CLUSTER%</subforce>
			<subforce ifDateBetween="3063,">%CLUSTER%</subforce>
			<subforce rating="SL">%CLUSTER%</subforce>
		</subforces>
		<subforces ifName="Epsilon Galaxy">
			<subforce ifDateBetween=",3062" unitType="Mek"
				role="command">%TRINARY%</subforce>
			<subforce ifDateBetween="3063," rating="Keshik"
				name="Silver Keshik">%CLUSTER%</subforce>
			<subforce ifDateBetween=",3062">%CLUSTER%</subforce>
			<subforce num="3">%CLUSTER%</subforce>
			<subforce rating="SL">%CLUSTER%</subforce>
		</subforces>
		<subforces ifRating="FL" ifRole="!command" ifName="!Epsilon Galaxy">
			<subforce role="command" unitType="Mek">%TRINARY%</subforce>
			<subforce num="4">%CLUSTER%</subforce>
			<subforce rating="SL">%CLUSTER%</subforce>
		</subforces>

		<subforces ifRating="SL">
			<subforce num="2" rating="PG">%CLUSTER%</subforce>
			<subforceOption>
				<option rating="PG">%CLUSTER%</option>
				<option rating="Sol">%CLUSTER%</option>
				<option />
			</subforceOption>
			<subforce rating="Sol">%CLUSTER%</subforce>
		</subforces>

		<attachedForces ifRating="SL">
			<subforceOption>
				<option num="2" rating="Sol"
					unitType="Tank">%CLUSTER%</option>
				<option num="1" rating="Sol"
					unitType="Tank">%CLUSTER%</option>
				<option />
			</subforceOption>
		</attachedForces>
	</force>

	<!--Some solahma clusters are made up entirely of conventional
	armor and infantry, which are used to delay or insult and enemy.
	These do not appear on the order of battle, and so are constructed as
	units attached to SL galaxies.-->

	<force eschelon="%CLUSTER%" eschName="Cluster" ifUnitType="Tank">
		<name>Solahma Support Cluster</name>
		<co>%STAR_COL%</co>

		<weightClass>
			<option weight="3">H</option>
			<option>M</option>
			<option weight="2">L</option>
		</weightClass>

		<subforces>
			<subforceOption ifWeightClass="H|A">
				<option weightClass="A,A" unitType="Tank"
					flags="+testTrinary" weight="5">%TRINARY%</option>
				<option weightClass="A,H" unitType="Tank"
					flags="+testTrinary" weight="5">%TRINARY%</option>
				<option weightClass="H,H" unitType="Tank"
					flags="+testTrinary" weight="5">%TRINARY%</option>
			</subforceOption>
			<subforceOption ifWeightClass="M">
				<option weightClass="H,M" unitType="Tank"
					flags="+testTrinary" weight="5">%TRINARY%</option>
				<option weightClass="H,L" unitType="Tank"
					flags="+testTrinary" weight="5">%TRINARY%</option>
				<option weightClass="M,M" unitType="Tank"
					flags="+testTrinary" weight="5">%TRINARY%</option>
			</subforceOption>
			<subforceOption ifWeightClass="L">
				<option weightClass="M,M" unitType="Tank"
					flags="+testTrinary" weight="5">%TRINARY%</option>
				<option weightClass="M,L" unitType="Tank"
					flags="+testTrinary" weight="5">%TRINARY%</option>
				<option weightClass="L,L" unitType="Tank"
					flags="+testTrinary" weight="5">%TRINARY%</option>
			</subforceOption>

			<subforceOption ifWeightClass="A|H">
				<option weightClass="A" unitType="Tank"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="H" unitType="Tank"
					flags="+testTrinary" weight="2">%TRINARY%</option>
			</subforceOption>
			<subforceOption ifWeightClass="M">
				<option weightClass="H" unitType="Tank"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="M" unitType="Tank"
					flags="+testTrinary" weight="2">%TRINARY%</option>
			</subforceOption>
			<subforceOption ifWeightClass="L">
				<option weightClass="M" unitType="Tank"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="L" unitType="Tank"
					flags="+testTrinary" weight="2">%TRINARY%</option>
			</subforceOption>

			<subforceOption>
				<option unitType="Infantry">%TRINARY%</option>
				<option unitType="Infantry">%BINARY%</option>
			</subforceOption>
			<subforceOption>
				<option unitType="Infantry">%TRINARY%</option>
				<option unitType="Infantry">%BINARY%</option>
				<option weight="2" />
			</subforceOption>
		</subforces>
	</force>

	<force eschelon="%CLUSTER%" eschName="Cluster">
		<name ifRating="SL"
			ifWeightClass="A|H">Reserve [Assault] Cluster</name>
		<name ifRating="SL"
			ifWeightClass="M">Reserve [Battle] Cluster</name>
		<name ifRating="SL"
			ifWeightClass="L">Reserve [Strike] Cluster</name>
		<name ifRating="Sol"
			ifWeightClass="A|H">Solahma [Assault] Cluster</name>
		<name ifRating="Sol"
			ifWeightClass="M">Solahma [Battle] Cluster</name>
		<name ifRating="Sol"
			ifWeightClass="L">Solahma [Strike] Cluster</name>
		<name ifWeightClass="A|H">[Assault] Cluster</name>
		<name ifWeightClass="M">[Battle] Cluster</name>
		<name ifWeightClass="L">[Strike] Cluster</name>
		<co ifName="Golden Keshik">%KHAN%</co>
		<co ifName="Silver Keshik">%SAKHAN%</co>
		<co ifName="Bronze Keshik">%LOREMASTER%</co>
		<co>%STAR_COL%</co>

		<weightClass>
			<option weight="4">H</option>
			<option weight="2">M</option>
			<option ifRole="!command" weight="1">L</option>
		</weightClass>

		<!-- Front Line clusters typically have three Mek, one BA, and one
		ASF trinary with a command Star or Nova. Variations are possible,
		including use of binaries and upgrading one of the Mek
		binary/trinaries to a supernova.-->

		<subforces ifRating="Keshik|FL|SL">
			<subforceOption ifWeightClass="H|A">
				<option weightClass="A" unitType="Mek"
					role="command" weight="2">%STAR%</option>
				<option weightClass="H" unitType="Mek"
					role="command" weight="3">%STAR%</option>
				<option weightClass="M" unitType="Mek"
					role="command" weight="1">%STAR%</option>
				<option weightClass="A" unitType="Mek" augmented="1"
					role="command" weight="4">%STAR%</option>
				<option weightClass="H" unitType="Mek" augmented="1"
					role="command" weight="6">%STAR%</option>
				<option weightClass="M" unitType="Mek" augmented="1"
					role="command" weight="2">%STAR%</option>
			</subforceOption>
			<subforceOption ifWeightClass="M">
				<option weightClass="A" unitType="Mek"
					role="command" weight="1">%STAR%</option>
				<option weightClass="H" unitType="Mek"
					role="command" weight="2">%STAR%</option>
				<option weightClass="M" unitType="Mek"
					weight="3">%STAR%</option>
				<option weightClass="A" unitType="Mek" augmented="1"
					role="command" weight="2">%STAR%</option>
				<option weightClass="H" unitType="Mek" augmented="1"
					role="command" weight="4">%STAR%</option>
				<option weightClass="M" unitType="Mek" augmented="1"
					role="command" weight="6">%STAR%</option>
			</subforceOption>
			<subforceOption ifWeightClass="L">
				<option weightClass="M" unitType="Mek"
					role="command" weight="2">%STAR%</option>
				<option weightClass="L" unitType="Mek"
					role="command" weight="1">%STAR%</option>
				<option weightClass="M" unitType="Mek" augmented="1"
					role="command" weight="4">%STAR%</option>
				<option weightClass="L" unitType="Mek" augmented="1"
					role="command" weight="2">%STAR%</option>
			</subforceOption>

			<subforceOption ifWeightClass="H|A">
				<option weightClass="A,A" unitType="Mek"
					flags="+testTrinary" weight="1">%TRINARY%</option>
				<option weightClass="A,H" unitType="Mek"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="A,M" unitType="Mek"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="A,L" unitType="Mek"
					flags="+testTrinary" weight="1">%TRINARY%</option>
				<option weightClass="H,H" unitType="Mek"
					flags="+testTrinary" weight="3">%TRINARY%</option>
				<option weightClass="H,M" unitType="Mek"
					flags="+testTrinary" weight="1">%TRINARY%</option>
			</subforceOption>
			<subforceOption ifWeightClass="M">
				<option weightClass="H,M" unitType="Mek"
					flags="+testTrinary" weight="3">%TRINARY%</option>
				<option weightClass="H,L" unitType="Mek"
					flags="+testTrinary" weight="1">%TRINARY%</option>
				<option weightClass="M,M" unitType="Mek"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="M,L" unitType="Mek"
					flags="+testTrinary" weight="1">%TRINARY%</option>
			</subforceOption>
			<subforceOption ifWeightClass="L">
				<option weightClass="M,M" unitType="Mek"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="M,L" unitType="Mek"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="L,L" unitType="Mek"
					flags="+testTrinary" weight="1">%TRINARY%</option>
			</subforceOption>

			<subforceOption ifWeightClass="H|A">
				<option weightClass="A" unitType="Mek"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="H" unitType="Mek"
					flags="+testTrinary" weight="3">%TRINARY%</option>
				<option weightClass="M" unitType="Mek"
					flags="+testTrinary" weight="1">%TRINARY%</option>
				<option weightClass="A" unitType="Mek" augmented="1"
					flags="+testTrinary" weight="4">%TRINARY%</option>
				<option weightClass="H" unitType="Mek" augmented="1"
					flags="+testTrinary" weight="6">%TRINARY%</option>
				<option weightClass="M" unitType="Mek" augmented="1"
					flags="+testTrinary" weight="2">%TRINARY%</option>
			</subforceOption>
			<subforceOption ifWeightClass="M">
				<option weightClass="A" unitType="Mek"
					flags="+testTrinary" weight="1">%TRINARY%</option>
				<option weightClass="H" unitType="Mek"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="M" unitType="Mek"
					flags="+testTrinary" weight="3">%TRINARY%</option>
				<option weightClass="A" unitType="Mek" augmented="1"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="H" unitType="Mek" augmented="1"
					flags="+testTrinary" weight="4">%TRINARY%</option>
				<option weightClass="M" unitType="Mek" augmented="1"
					flags="+testTrinary" weight="6">%TRINARY%</option>
			</subforceOption>
			<subforceOption ifWeightClass="L">
				<option weightClass="M" unitType="Mek"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="L" unitType="Mek"
					flags="+testTrinary" weight="1">%TRINARY%</option>
				<option weightClass="M" unitType="Mek" augmented="1"
					flags="+testTrinary" weight="4">%TRINARY%</option>
				<option weightClass="L" unitType="Mek" augmented="1"
					flags="+testTrinary" weight="2">%TRINARY%</option>
			</subforceOption>

			<subforceOption ifWeightClass="H|A">
				<option weightClass="H" unitType="AeroSpaceFighter"
					flags="+testTrinary" weight="3">%TRINARY%</option>
				<option weightClass="M" unitType="AeroSpaceFighter"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="L" unitType="AeroSpaceFighter"
					flags="+testTrinary" weight="1">%TRINARY%</option>
			</subforceOption>
			<subforceOption ifWeightClass="M">
				<option weightClass="H" unitType="AeroSpaceFighter"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="M" unitType="AeroSpaceFighter"
					flags="+testTrinary" weight="3">%TRINARY%</option>
				<option weightClass="L" unitType="AeroSpaceFighter"
					flags="+testTrinary" weight="2">%TRINARY%</option>
			</subforceOption>
			<subforceOption ifWeightClass="L">
				<option weightClass="H" unitType="AeroSpaceFighter"
					flags="+testTrinary" weight="1">%TRINARY%</option>
				<option weightClass="M" unitType="AeroSpaceFighter"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="L" unitType="AeroSpaceFighter"
					flags="+testTrinary" weight="3">%TRINARY%</option>
			</subforceOption>

			<subforceOption>
				<option ifDateBetween="2870," flags="+testTrinary"
					unitType="BattleArmor">%TRINARY%</option>
				<option ifDateBetween="2900," flags="+testTrinary"
					unitType="BattleArmor">%TRINARY%</option>
				<option />
			</subforceOption>
		</subforces>

		<!--SL and Solahma units will have 3-5 binaries or trinaries,
		with 2-3 of them being Mek. ASF and BA may or may be present.
		Nova formations are not common. Some solahma clusters are
		equipped entirely with conventional armor and infantry, but
		these are not considered in the TO&E.-->

		<!--The first two are either both 'Mek or both armor (always
		armor for Solahma-->
		<subforces ifRating="Sol|PG">
			<subforceOption ifWeightClass="H|A">
				<option weightClass="A,A" unitType="Mek" ifRating="PG"
					flags="+testTrinary" weight="1">%TRINARY%</option>
				<option weightClass="A,H" unitType="Mek" ifRating="PG"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="A,M" unitType="Mek" ifRating="PG"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="A,L" unitType="Mek" ifRating="PG"
					flags="+testTrinary" weight="1">%TRINARY%</option>
				<option weightClass="H,H" unitType="Mek" ifRating="PG"
					flags="+testTrinary" weight="3">%TRINARY%</option>
				<option weightClass="H,M" unitType="Mek" ifRating="PG"
					flags="+testTrinary" weight="1">%TRINARY%</option>
				<option weightClass="A,A" unitType="Tank"
					flags="+testTrinary" weight="1">%TRINARY%</option>
				<option weightClass="A,H" unitType="Tank"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="A,M" unitType="Tank"
					flags="+testTrinary" weight="2">%TRINARY%</option>
				<option weightClass="A,L" unitType="Tank"
					flags="+testTrinary" weight="1">%TRINARY%</option>
				<option weightClass="H,H" unitType="Tank"
					flags="+testTrinary" weight="3">%TRINARY%</option>
				<option weightClass="H,M" unitType="Tank"
					flags="+testTrinary" weight="1">%TRINARY%</option>
			</subforceOption>
			<subforceOption ifWeightClass="M">
				<option weightClass="H,M" unitType="Mek" ifRating="PG"
					flags="+testTrinary" weight="3">%TRINARY%</option>
